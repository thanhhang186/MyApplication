<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerifyRegisterActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_verify">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/edt_margin_le_ri">
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_1"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/edt_margin_le_ri"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/round_verify_edt"/>
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_2"
            android:layout_weight="1"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="@dimen/edt_margin_le_ri"
            android:background="@drawable/round_verify_edt"/>
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_3"
            android:layout_weight="1"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="@dimen/edt_margin_le_ri"
            android:background="@drawable/round_verify_edt"/>
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_4"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/edt_margin_le_ri"
            android:background="@drawable/round_verify_edt"/>
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_5"
            android:layout_weight="1"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="@dimen/edt_margin_le_ri"
            android:background="@drawable/round_verify_edt"/>
        <EditText
            android:layout_width="@dimen/edt_verify"
            android:layout_height="@dimen/edt_verify"
            android:id="@+id/num_verify_6"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/round_verify_edt"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edt_margin_le_ri"
        android:background="@drawable/round_verify_edt"
        android:text="Resend"
        android:textColor="@color/round_verify_edt"
        android:id="@+id/btnReSendCode"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edt_margin_le_ri"
        android:background="@drawable/round_button_register"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnVerify"/>
</LinearLayout>